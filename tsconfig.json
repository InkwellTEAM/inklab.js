{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
